#:import Factory kivy.factory.Factory

<ViewInstructionScreenView>:
    canvas.before:
        Color:
            rgba: Colors.background_color
        Rectangle:
            size: self.size
            pos: self.pos

    MDRectangleFlatButton:
        pos: 0, root.height - self.height
        on_release:
            root.controller.switch_screen('view screen')
        Image:
            source: "assets//view_instruction_data//back.png"

    # Квадрат по центру
    MDBoxLayout:
        size_hint: None, None
        size: '80dp', '40dp'
        pos_hint: {'center_x': .5, 'center_y': .546}
        canvas:
            Color:
                rgba: Colors.button_color
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: Colors.background_color
            Rectangle:
                size: self.width / 1.2, self.height / 1.2
                pos: self.center_x - self.width / 2.4, self.center_y - self.height / 2.4


    MDBoxLayout:
        orientation: 'vertical'

        # Скорость
        MDBoxLayout:
            padding: 10

            MDGridLayout:
                cols: 1
                rows: 3
                size_hint: 1, 1

                Widget:

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, 1
                    padding: 10

                    MDSlider:
                        id: slider_speed_id
                        orientation: "vertical"
                        max: 5
                        min: -5
                        value: 0
                        hint: False
                        size_hint: 1, 1
                        on_value: root.schedule_read_list_inst()

                    MDLabel:
                        text: str(int(slider_speed_id.value))
                        color: (0, 0, 0, 1)
                        halign: "center"
                        size_hint: 1, 1

                Widget:

            # Инструкция
            MDBoxLayout:
                id: inst_list
                size_hint: 2.5, 1
                orientation: 'vertical'

            # Пауза
            MDGridLayout:
                cols: 1
                rows: 3
                size_hint: 1, 1

                Widget:

                MDFloatingActionButton:
                    id: play_pause_button
                    icon: "pause"
                    md_bg_color: Colors.button_color
                    size_hint: 1, None
                    on_type: small
                    on_release: root.toggle_play_pause()

                Widget:

        # Кнопки
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            padding: 10

            MDRectangleFlatButton:
                size_hint: 1.5, 1
                radius: [20]
                md_bg_color: Colors.button_color
                Image:
                    source: "assets//view_instruction_data//mic.png"

            MDLabel:
                id: num_lines
                text: "0/0"
                color: Colors.button_color
                halign: 'center'
                size_hint: 1, 1

            MDRectangleFlatButton:
                size_hint: 1.5, 1
                radius: [20]
                md_bg_color: Colors.button_color
                on_release:
                    Factory.SearchLine(root).open()
                Image:
                    source: "assets//view_instruction_data//zoom.png"


<SearchLine>:
    title: 'Поиск линии'
    size_hint: .5, .3

    MDBoxLayout:
        orientation: 'vertical'
        padding: '20dp'

        MDTextField:
            id: input_field
            hint_text: "Enter the line number"
            size_hint: 1, None

        MDRectangleFlatButton:
            id: btn_ok
            text: 'OK'
            md_bg_color: Colors.button_color
            text_color: Colors.background_color
            radius: [20]
            size_hint: 1, None
            on_release:
                root.search_line(input_field.text)
                root.dismiss()