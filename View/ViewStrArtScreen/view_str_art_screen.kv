<ViewStrArtScreenView>:
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: Colors.background_color
            Rectangle:
                size: self.size
                pos: self.pos
        MDBoxLayout:
            id: container
            orientation: "vertical"
            size_hint: 1, 1

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .2
            padding: 20
            spacing: 20

            MDRectangleFlatButton:
                text: 'Назад'
                md_bg_color: Colors.button_color
                size_hint: 1, 0
                text_color: Colors.background_color
                radius: [20]
                on_release: root.controller.switch_screen('main screen')

            MDRectangleFlatButton:
                text: 'Вперед'
                md_bg_color: Colors.button_color
                size_hint: 1, 0
                text_color: Colors.background_color
                radius: [20]
                on_release: root.controller.switch_screen('view instruction')
