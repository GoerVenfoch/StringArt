<ViewStrArtScreenView>:
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: (128, 0, 128, 0.5)
            Rectangle:
                size: self.size
                pos: self.pos
        MDBoxLayout:
            id: container
            orientation: "vertical"
            size_hint: 1, 1

        MDBoxLayout:
            orientation: 'horizontal'
            # size: root.width, root.height
            size_hint: 1, .2
            padding: 20
            spacing: 20

            canvas.before:
                Color:
                    rgba: (18, 0, 128, 0.5)
                Rectangle:
                    size: self.size
                    pos: self.pos

            MDRectangleFlatButton:
                text: 'Back'
                md_bg_color: (10/255, 100/255, 10/255, 1)
                size_hint: 1, 0
                text_color: (1, 1, 1, 1)
                radius: [20]
                on_release: root.controller.switch_screen('main screen')

            MDRectangleFlatButton:
                text: 'Next'
                md_bg_color: (10/255, 100/255, 10/255, 1)
                size_hint: 1, 0
                text_color: (1, 1, 1, 1)
                radius: [20]
                on_release: root.controller.switch_screen('view instruction')
